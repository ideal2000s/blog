<%= form_for article do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <% if article.errors.include?(:title) %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
    <% if article.errors.include?(:body) %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.select :status, valid_status, selected: valid_status.first %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>